# Copia questo file in .env e popola i tuoi valori
# Questo è un template di esempio

# API key di Render per autenticazione verso MCP server
RENDER_API_KEY=rnd_tuoTokenRenderQui

# Shared secret per autenticazione proxy (cliente deve conoscerlo)
# Disponibile nel tuo .env; è usato come parametro URL: /mcp/<MCP_SHARED_SECRET>
MCP_SHARED_SECRET=36bf3a65-1518-414e-9218-741d24a01cd7

# URL del server MCP upstream (di solito Render)
UPSTREAM_MCP_URL=https://mcp.render.com/mcp

# Timeout per fetch upstream in millisecondi (default 120000 = 2 minuti)
# Se il server upstream non risponde entro questo tempo, la richiesta è abortita
UPSTREAM_TIMEOUT_MS=120000

# Porta su cui ascoltare. Platform (Heroku, Render etc) imposta automaticamente via $PORT
PORT=10000
